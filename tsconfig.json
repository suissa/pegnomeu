{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": ".",
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmitOnError": false,
    "types": ["node", "DOM", "bun-types"],
    "lib": ["ESNext", "DOM"],
    "declaration": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
